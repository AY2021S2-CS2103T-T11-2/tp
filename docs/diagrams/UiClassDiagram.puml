@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam defaultFontSize 30
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class SidePanel
Class TodayPanel
Class ProjectDisplayPanel
Class HelpPanel
Class ResultDisplay
Class ContactListPanel
Class ContactCard
Class ProjectCard
Class EventCard
Class DeadlineCard
Class TodoCard
Class TodayDeadlineCard
Class TodayEventCard
Class StatusBarFooter
Class CommandBox
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ...> Ui

UI -[hidden]up- HiddenOutside

UiManager .up.|> Ui
UiManager -down-> MainWindow

MainWindow *-left> HelpPanel
MainWindow *-left> CommandBox
MainWindow *-left> ResultDisplay
MainWindow *-left> StatusBarFooter
MainWindow *-down> SidePanel
MainWindow *-down> TodayPanel
MainWindow *-right> ProjectDisplayPanel
MainWindow *-down-> ContactListPanel

ResultDisplay ---|> UiPart
CommandBox ---|> UiPart
ContactListPanel ---|> UiPart
ContactCard ---|> UiPart
SidePanel ---|> UiPart
ProjectCard ---|> UiPart
TodayPanel ---|> UiPart
ProjectDisplayPanel ---|> UiPart
StatusBarFooter ---|> UiPart
TodayEventCard ---|> UiPart
TodayDeadlineCard ---|> UiPart
EventCard ---|> UiPart
DeadlineCard ---|> UiPart
TodoCard ---|> UiPart
HelpPanel ---|> UiPart

ContactListPanel ---> ContactCard
SidePanel ---> ProjectCard
ProjectDisplayPanel ---> EventCard
ProjectDisplayPanel ---> DeadlineCard
ProjectDisplayPanel ---> TodoCard
TodayPanel ---> TodayDeadlineCard
TodayPanel ---> TodayEventCard

ContactCard .down.> Model
ProjectCard .down.> Model
EventCard .down.> Model
DeadlineCard .down.> Model
TodoCard .down.> Model
TodayDeadlineCard .down.> Model
TodayEventCard .down.> Model

MainWindow ---|> UiPart

UiManager -up-> Logic
MainWindow -up-> Logic

HelpPanel -[hidden]up- StatusBarFooter
StatusBarFooter -[hidden]up- ResultDisplay
ResultDisplay -[hidden]up- CommandBox
HiddenOutside -[hidden]up- UiManager
HiddenOutside -[hidden]left- Logic
UiPart -[hidden]down- Model
Ui -[hidden]up-- Logic

@enduml
